@{
    Business.Filme filme = ViewBag.Filme;
}
<div class="jumbotron">
    <h2>Editar Filme</h2>
    <form action="/filmes/alterar/@filme.Id" method="post">
        <div class="form-group">
            <label for="nome">Nome</label>
            <input type="text" class="form-control" id="nome" name="nome" value="@filme.Nome">
        </div>
        <div class="form-group">
            <label for="diretor">Diretor</label>
            <input type="text" class="form-control" id="diretor" name="diretor" value="@filme.Diretor">
        </div>
        <div class="form-group">
            <label for="dataLancamento">Data Lançamento</label>
            <input type="date" class="form-control" id="dataLancamento" name="dataLancamento" value="@filme.DataLancamento.ToString("yyyy-MM-dd")">        </div>
        <div class="form-group">
            <a href="/filmes" class="btn btn-default">Voltar</a>
            <button type="submit" class="btn btn-primary">Editar</button>
        </div>
    </form>
</div>
